#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
char ansi = 0;
int main()
{
	int a = 0;
	int b = 0;
	int c = 0;
	int d = 0;
	int i = 1;
	while (i < 11)
	{
		printf("请输入学员 %d 的答案（请务必输入大写英文字母 A 、B 、C 、D）：",i);
		scanf("%s", &ansi);
		if (ansi == 'A')
		{
			a++;
			i++;
		}
		else
		{
			if (ansi == 'B')
			{
				b++;
				i++;
			}
			else
			{
				if (ansi == 'C')
				{
					c++;
					i++;
				}
				else
				{
					if (ansi == 'D')
					{
						d++;
						i++;
					}
					else
					{
						i++;
					}
				}
			}
		}
	}
	i = i - 1;
	printf("本次参加测试的学院有 %d 人\n", i);
	printf("选择 A 答案的有 %d 人\n", a);
	printf("选择 B 答案的有 %d 人\n", b);
	printf("选择 C 答案的有 %d 人\n", c);
	printf("选择 D 答案的有 %d 人\n", d);
	return 0;
}
