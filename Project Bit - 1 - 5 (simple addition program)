#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int add(int x, int y)
{
	int z = 0;
	z = x + y;
	return z;
}

int main()
{
	int num1 = 0;
	int num2 = 0;
	printf("Please enter addend 1 : ");
	scanf("%d", &num1);
	printf("Please enter addend 2 : ");
	scanf("%d", &num2);
	int sum = add(num1, num2);
	printf("The result of the above addition calculation is : %d\n", sum);
	return 0;
}
